<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LocalNote"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:ViewModels="using:LocalNote.ViewModels"
    x:Class="LocalNote.MainPage"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="NoteTemplate">
            <StackPanel Orientation="Horizontal">
                <TextBlock
					Text="{Binding ID, Mode=OneWay}"
					Width="Auto"/>
                <TextBlock
					Text="{Binding Title, Mode=OneWay}"
					Width="Auto"
					Margin="10, 0"/>
                <!--<ItemsControl ItemsSource="{Binding Notes, Mode=OneWay}"/>-->
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Page.DataContext>
        <ViewModels:MainPageData/>
    </Page.DataContext>
    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition
				Width="0.3*"/>
            <ColumnDefinition
				Width="0.7*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition
				Height="Auto"/>
            <RowDefinition
				Height="70"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <CommandBar
			Grid.Column="0"
			Grid.ColumnSpan="2">
            <CommandBar.Content>
                <TextBlock
					Text="{Binding SelectedNote.Title}"
					Margin="12,7"
					FontSize="24"/>
            </CommandBar.Content>
            <CommandBar.SecondaryCommands>
                <AppBarButton x:ConnectionId='4'
					x:Name="About"
					Label="About"
					Command="{Binding AboutCommand}"/>
                <AppBarButton x:ConnectionId='5'
					x:Name="Exit"
					Label="Exit"
					Command="{Binding ExitCommand}"/>
            </CommandBar.SecondaryCommands>
            <AppBarButton
				Icon="Add"
				Label="Add"
				Command="{Binding AddNoteCommand}"
				IsEnabled="{Binding AddButtonIsEnabled}"/>
            <AppBarButton
				Icon="Save"
				Label="Save"
				Command="{Binding SaveNoteCommand}"
				IsEnabled="{Binding SaveButtonIsEnabled}"/>
            <AppBarButton
				Icon="Edit"
				Label="Edit"
				Command="{Binding EditNoteCommand}"
				IsEnabled="{Binding EditButtonIsEnabled}"/>
            <AppBarSeparator/>
            <AppBarButton
				Icon="Delete"
				Label="Delete"
				Command="{Binding DeleteNoteCommand}"
				IsEnabled="{Binding DeleteButtonIsEnabled}"/>
        </CommandBar>
        <TextBox x:ConnectionId='1' 
			x:Name="SearchBox"
			TextWrapping="Wrap"
			Grid.Column="0"
			Grid.Row="1"
			Margin="12"
			PlaceholderText="Search"
			FontSize="24"
			Text="{Binding Filter, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
			IsEnabled="{Binding SearchBoxIsEnabled}"/>
        <ListView x:ConnectionId='2'
			x:Name="NoteList"
			Grid.Column="0"
			Grid.Row="2"
			ItemTemplate="{StaticResource NoteTemplate}"
			ItemsSource="{Binding Notes}"
			SelectedItem="{Binding SelectedNote, Mode=TwoWay}"/>
        <TextBox x:ConnectionId='3'
			x:Name="NoteContent"
			Grid.Column="1"
			Grid.Row="1"
			Grid.RowSpan="2"
			TextWrapping="Wrap"
			Text="{Binding ActiveContent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
			IsReadOnly="{Binding NoteContentIsReadOnly}" AcceptsReturn="True" InputScope="Text"/>
    </Grid>
</Page>

